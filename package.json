{
  "name": "azure-architect-assistant",
  "version": "4.0.0",
  "description": "Azure Architecture Assistant - Unified Python FastAPI backend with React frontend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:python\" \"npm run dev --workspace=frontend\"",
    "dev:python": "cd backend && python -m uvicorn app.main:app --reload --port 8000",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "frontend": "npm run dev --workspace=frontend",
    "install:all": "npm install && npm install --workspaces && cd backend && pip install -r requirements.txt && cd .."
  },
  "keywords": [
    "typescript",
    "express",
    "react",
    "vite",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
