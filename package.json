{
  "name": "azure-architect-assistant",
  "version": "4.0.0",
  "description": "Azure Architecture Assistant - Unified Python FastAPI backend with React frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "backend": "powershell -File start-backend.ps1",
    "frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "lint:fix": "npm run lint:fix --workspace=frontend",
    "installAll": "npm install --workspace=frontend && uv sync",
    "kill": "powershell -File kill-backend.ps1"
  },
  "keywords": [
    "azure",
    "architecture",
    "assistant",
    "fastapi",
    "react",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "baseline-browser-mapping": "^2.9.17",
    "eslint": "^9.39.2",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "typescript-eslint": "^8.53.0"
  },
  "volta": {
    "node": "25.4.0"
  }
}
